<Window x:Class="NJabber.view.MessageWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Message" Height="300" Width="300">
    <Grid>
        <ListBox Margin="12,8,9,51" Name="listBox1" >
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" /> 
                        </Grid.RowDefinitions>
                        <TextBlock  Text="{Binding From}" FontWeight="Bold" />
                        <TextBlock Grid.Row="1" Text="{Binding Body}" TextWrapping="Wrap" FontWeight="Normal" />
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <TextBox Height="32" Margin="12,0,59,10" Name="textBox1" VerticalAlignment="Bottom" TextChanged="textBox1_TextChanged" />
        <Button Height="29" HorizontalAlignment="Right" Margin="0,0,7,11" Name="button1" VerticalAlignment="Bottom" Width="46" Click="button1_Click">Send</Button>
    </Grid>
</Window>
